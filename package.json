{
  "name": "audio-converter-vue",
  "version": "2.0.0",
  "type": "module",
  "description": "Modern Audio Converter with Vue 3, Vite and i18n",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File .\\deploy.ps1",
    "deploy:linux": "bash deploy.sh",
    "electron:dev": "cross-env ELECTRON=true vite build --mode development && electron .",
    "electron:build": "cross-env ELECTRON=true vite build --mode production && electron-builder",
    "electron:build:win": "cross-env ELECTRON=true vite build --mode production && electron-builder --win",
    "electron:build:mac": "cross-env ELECTRON=true vite build --mode production && electron-builder --mac",
    "electron:build:linux": "cross-env ELECTRON=true vite build --mode production && electron-builder --linux"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.0",
    "axios": "^1.6.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-i18n": "^9.9.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.20.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "cross-env": "^7.0.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.audiokonverter.app",
    "productName": "Audio Konverter",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "msi",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "icon-512.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "icon-512.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "icon-512.png",
      "category": "Audio"
    }
  }
}
